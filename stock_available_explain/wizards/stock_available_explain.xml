<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="stock_available_explain_form">
            <field name="name">Explain available stock for a product</field>
            <field name="model">stock.available.explain</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="state" />
                        <field name="product_id" />
                    </group>
                    <group
                        attrs="{'invisible': [('state','!=','show')]}"
                        colspan="6" col = "4"
                        >
                        <group colspan="2" col = "2">
                            <field name="product_qty_available" />
                            <field name="product_incoming_qty" />
                            <field name="product_outgoing_qty" />
                            <field name="product_virtual_available" />
                        </group>
                        <group colspan="2" col = "2">
                            <field name="qty_available" />
                            <field name="incoming_qty" />
                            <field name="outgoing_qty" />
                            <field name="virtual_available" />
                        </group>
                    </group>
                    <footer>
                        <button
                            name="process"
                            string="Process"
                            type="object"
                            attrs="{'invisible': [('state','=','show')]}"
                            class="oe_highlight"
                            />
                        <button
                            name="reset"
                            string="Reset"
                            type="object"
                            attrs="{'invisible': [('state','!=','show')]}"
                            class="oe_highlight"
                            />
                        <button
                            special="cancel"
                            string="Cancel"
                            class="oe_link"
                            />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</openerp>
